<ScrollView
    android:id="@+id/scrollHighscore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.polytech.stfu.ihm.HighscoreActivity"
    android:background="@drawable/background_classique"
    android:fillViewport="false"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        tools:context="com.polytech.stfu.ihm.HighscoreActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreClassique"
                android:id="@+id/scoreClassique"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                android:background="@drawable/btn_classique"
                android:onClick="displayHighscores"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreChrono"
                android:id="@+id/scoreChrono"
                android:layout_weight="1"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                android:background="@drawable/btn_classique"
                android:onClick="displayHighscores"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            android:id="@+id/tableScore"
            android:padding="10dp"
            android:background="@drawable/fond_classique"
            android:alpha="0.75"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <TableRow android:orientation="vertical">
                <TextView
                    android:text="@string/hashtag"
                    android:layout_width="40dp"
                    android:textSize="20sp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="@string/nomTitle"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="@string/scoreTitle"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                />
            <TableRow android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:text="@string/pos1"
                    android:textSize="24sp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:id="@+id/name1"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:id="@+id/score1"
                    android:textSize="24sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:text="@string/pos2"
                    android:textSize="22sp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:id="@+id/name2"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:id="@+id/score2"
                    android:textSize="22sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:text="@string/pos3"
                    android:textSize="20sp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:id="@+id/name3"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:id="@+id/score3"
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:text="@string/pos4"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:id="@+id/name4"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:id="@+id/score4"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:text="@string/pos5"
                    android:textSize="16sp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:id="@+id/name5"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:id="@+id/score5"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>