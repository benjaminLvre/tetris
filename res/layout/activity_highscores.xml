<ScrollView
    android:id="@+id/scrollHighscore"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.polytech.stfu.ihm.HighscoreActivity"
    android:background="@drawable/background_polytech"
    android:fillViewport="false"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        tools:context="com.polytech.stfu.ihm.HighscoreActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreClassique"
                android:id="@+id/scoreClassique"
                android:layout_weight="1"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                android:background="@drawable/btn_polytech"
                android:onClick="displayHighscores"
                android:paddingLeft="24dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreChrono"
                android:id="@+id/scoreChrono"
                android:layout_weight="1"
                android:textColor="#1A1A1A"
                android:textSize="20sp"
                android:background="@drawable/btn_polytech"
                android:onClick="displayHighscores"
                android:paddingLeft="24dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            android:id="@+id/tableScore"
            android:padding="10dp"
            android:background="@drawable/fond_polytech"
            android:alpha="0.75"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <TableRow android:orientation="vertical">
                <TextView
                    android:text="#"
                    android:layout_width="40dp"
                    android:textSize="20dp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="Pseudo"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="Score"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                />
            <TableRow android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:text="1"
                    android:textSize="24dp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name1"
                    android:textSize="24dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:text="3561"
                    android:id="@+id/score1"
                    android:textSize="24dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:text="2"
                    android:textSize="22dp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name2"
                    android:textSize="22dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:text="3562"
                    android:id="@+id/score2"
                    android:textSize="22dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:text="3"
                    android:textSize="20dp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name3"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:text="3563"
                    android:id="@+id/score3"
                    android:textSize="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <TextView
                    android:text="4"
                    android:textSize="18dp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name4"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:text="3565"
                    android:id="@+id/score4"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
            <TableRow android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:text="5"
                    android:textSize="16dp"
                    android:textColor="#1A1A1A" />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name5"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A"
                    android:maxLength="10" />
                <TextView
                    android:text="3564"
                    android:id="@+id/score5"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1A1A1A" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>