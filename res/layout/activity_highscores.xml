<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.polytech.stfu.ihm.HighscoreActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        tools:context="com.polytech.stfu.ihm.HighscoreActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreClassique"
                android:id="@+id/scoreClassique"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@drawable/btn_classique"
                android:onClick="displayHighscores"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scoreChrono"
                android:id="@+id/scoreChrono"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="@drawable/btn_classique"
                android:onClick="displayHighscores"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            android:id="@+id/tableScore">

            <TableRow>
                <TextView
                    android:text="#"
                    />
                <TextView
                    android:text="Pseudo"
                    />
                <TextView
                    android:text="Score"
                    />
            </TableRow>
            <View
                android:layout_height="2dip"
                android:background="#FF909090"
                />
            <TableRow>
                <TextView
                    android:text="1"
                    />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name1"
                    />
                <TextView
                    android:text="3561"
                    android:id="@+id/score1"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="2"
                    />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name2"
                    />
                <TextView
                    android:text="3562"
                    android:id="@+id/score2"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="3"
                    />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name3"
                    />
                <TextView
                    android:text="3563"
                    android:id="@+id/score3"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="4"
                    />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name4"
                    />
                <TextView
                    android:text="3565"
                    android:id="@+id/score4"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="5"
                    />
                <TextView
                    android:text="JohnDuff"
                    android:id="@+id/name5"
                    />
                <TextView
                    android:text="3564"
                    android:id="@+id/score5"
                    />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>