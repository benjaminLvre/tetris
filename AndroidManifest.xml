<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polytech.stfu.ihm" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName=".mainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytech.stfu.ihm.mainMenuActivity" />
        </activity>
        <activity
            android:name=".mainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InstructionsActivity"
            android:label="@string/title_activity_page_intructions"
            android:parentActivityName=".mainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytech.stfu.ihm.mainMenuActivity" />
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:label="@string/title_activity_options"
            android:parentActivityName=".mainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytech.stfu.ihm.mainMenuActivity" />
        </activity>
		<receiver android:name="GameReceiver" android:exported="false">
			<intent-filter>
				<action android:name="com.polytech.stfu.jeu.GAME_STATE_CHANGE" />
				<action android:name="com.polytech.stfu.jeu.NEW_SCORE" />
				<action android:name="com.polytech.stfu.jeu.GAME_END" />
			</intent-filter>
		</receiver>
    </application>
</manifest>